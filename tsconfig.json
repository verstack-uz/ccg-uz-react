{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist",

    "target": "es2024",
    "module": "es2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,

    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
